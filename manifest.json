{
  "manifest_version": 3,
  "name": "Domain Redirect Tracker",
  "version": "1.0",
  "description": "Tracks the number of redirects for each domain throughout the day",
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}